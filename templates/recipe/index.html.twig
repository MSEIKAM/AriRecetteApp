{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
{% if app.user %}
    <div class="mb-3">
        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
    </div>
{% endif %}
    <h1>Recipes</h1>
    <ul>
        {% for recipe in recipes %}
            <li>
                <a href="{{ path('recipe_show', { id: recipe.id }) }}">
                    {{ recipe.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
